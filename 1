#include <iostream>
#include <cmath>

int mass[32];
int min = pow(10, 7);



int raznica(int i, int n, int sm, int sp) {
	if (i == n) {
		int r = abs(sm - sp);
		if (r < min) {
			min = r;
			return min;
		}
	}
	else {
		raznica(i + 1,n,  sm + mass[i], sp);
		raznica(i + 1,n,  sm, sp + mass[i]);
	}

}


int main() {
	int n;
	std::cin >> n;
	for (int i = 0; i < n; ++i) {
		std::cin >> mass[i];
	}
	raznica(0, n, 0, 0);
	std::cout << min;
	return 0;

}
